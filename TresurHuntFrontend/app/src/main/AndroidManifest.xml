<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MakerMapActivity"></activity>
        <activity android:name=".FormMakerActivity" />
        <activity
            android:name=".GameActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" /> <!-- Indica che sara' la prima Activity ad essere visualizzata quando verra' aperta l'app -->
            </intent-filter>
        </activity> <!-- Va aggiunta questa parte ogni volta che si aggiunge una nuova Activity -->
        <activity
            android:name=".ListViewActivity"
            android:parentActivityName=".GameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>